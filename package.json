{
  "publisher": "howcasperwhat",
  "name": "comment-formula",
  "displayName": "Comment Formula",
  "version": "0.4.10",
  "description": "Preview LaTeX formulas within the line of your editor.",
  "author": "Casper Huang",
  "repository": {
    "type": "git",
    "url": "https://github.com/howcasperwhat/comment-formula.git"
  },
  "categories": [
    "Visualization",
    "Snippets"
  ],
  "main": "./dist/index.js",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "comment-formula",
      "properties": {
        "comment-formula.color": {
          "type": "string",
          "default": "auto",
          "description": "Color of rendered formulas."
        },
        "comment-formula.inline": {
          "type": "string",
          "enum": [
            "partial",
            "all",
            "none"
          ],
          "default": "partial",
          "description": "`partial` means only not-so-large formulas are rendered inline."
        },
        "comment-formula.languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "c",
            "cpp",
            "java",
            "python"
          ],
          "description": "Enable comment-formula in these languages. LanguageId: https://code.visualstudio.com/docs/languages/identifiers#_known-language-identifiers"
        },
        "comment-formula.symbol": {
          "type": "string",
          "enum": [
            "$",
            "#",
            "@"
          ],
          "default": "$",
          "description": "Identifier symbol of formula code."
        },
        "comment-formula.interval": {
          "type": "number",
          "default": 200,
          "minimum": 100,
          "description": "Formula update interval(ms)."
        },
        "comment-formula.code": {
          "type": "string",
          "default": "font-weight: bold;",
          "description": "Style of matched LaTeX code."
        },
        "comment-formula.preview": {
          "type": "string",
          "default": "",
          "description": "Style of the inline formula preview."
        },
        "comment-formula.completion": {
          "type": "boolean",
          "default": true,
          "description": "Enable intelligent completion."
        },
        "comment-formula.multiple": {
          "type": "string",
          "enum": [
            "before",
            "after",
            "none"
          ],
          "default": "before",
          "description": "Set preview position of multiple line LaTeX or disable it."
        },
        "comment-formula.single": {
          "type": "string",
          "enum": [
            "before",
            "after",
            "none"
          ],
          "default": "after",
          "description": "Set preview position of single line LaTeX or disable it."
        },
        "comment-formula.hidden": {
          "type": "boolean",
          "default": true,
          "description": "Enable hiding code when selections are out of range."
        },
        "comment-formula.scale": {
          "type": "number",
          "default": 1,
          "description": "Scale factor of the preview formula."
        },
        "comment-formula.api.prefix": {
          "type": "string",
          "default": "",
          "description": "API prefix."
        },
        "comment-formula.api.suffix": {
          "type": "string",
          "default": "",
          "description": "API suffix."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsup src/index.ts --external vscode",
    "dev": "npm run build --watch",
    "prepare": "npm run update",
    "lint": "eslint .",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "pack": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.20.0",
    "mathjax-full": "^3.2.2",
    "reactive-vscode": "^0.2.13",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vscode-ext-gen": "^1.0.0"
  }
}
